<article class='flash-sale' id="flash_sale_<%= flash_sale.id %>" data-hook="flash-sale" itemscope itemtype='http://schema.org/Offer'>
  <%= flash_sale.render_image %>
  <h1 class='flash-sale-name'>
    <%= link_to flash_sale.name, flash_sale.render_url, itemprop: 'name', title: flash_sale.name %>
  </h1>
  <div class='flash-sale-expires'>
    Ends in: <span class='flash-sale-countdown' data-countdown="<%= flash_sale.end_date.strftime('%B %-d, %Y %H:%M:%S') %>" data-layout="{dn} DAYS {hnn}{sep}{mnn}{sep}{snn}"></span>
  </div>
</article>
