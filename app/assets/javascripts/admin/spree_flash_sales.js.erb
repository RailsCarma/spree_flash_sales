//= require jquery.datetimepicker

handle_datetime_picker_fields = function(){
  $('.timepicker').datetimepicker({
    showOn: "focus",
    showTimezone: true,
    showSecond: true,
    dateFormat: "<%= Spree.t('flash_sale.datetimepicker.js_date_format') %>",
    timeFormat: "<%= Spree.t('flash_sale.datetimepicker.js_format') %>",
    timeOnlyTitle: "<%= Spree.t('flash_sale.datetimepicker.time_only_title') %>",
    timeText: "<%= Spree.t('flash_sale.datetimepicker.time_text') %>",
    hourText: "<%= Spree.t('flash_sale.datetimepicker.hour_text') %>",
    minuteText: "<%= Spree.t('flash_sale.datetimepicker.minute_text') %>",
    secondText: "<%= Spree.t('flash_sale.datetimepicker.second_text') %>",
    currentText: "<%= Spree.t('flash_sale.datetimepicker.current_text') %>",
    closeText: "<%= Spree.t('flash_sale.datetimepicker.close_text') %>"
  });

}

$(document).ready(function(){
  handle_datetime_picker_fields();
});
